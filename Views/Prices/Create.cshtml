@model MenuGenerator.Models.Price

@{
    ViewData["Title"] = "Create";
    Layout = "_mealOptionsLayout";
}

<h1 class="text-light">Vytvoriť</h1>

<h4 class="text-light">Cena</h4>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Cena" class="control-label text-light"></label>
                <input asp-for="Cena" class="form-control" />
                <span asp-validation-for="Cena" class="text-danger"></span>
            </div>
            <span class="form-group">
                <button type="submit" class="btn text-light">
                    <img src="~/bootstrap-icons/plus-circle.svg" class="zoom-sm hvr-csr-pt" alt="" width="32" height="32" title="Pridať">
                </button>
            </span>
            <span class="form-group">
                <a asp-action="Index" class="text-light">
                    <img src="~/bootstrap-icons/card-text.svg" class="zoom-sm hvr-csr-pt" alt="" width="32" height="32" title="Zobraziť položky">
                </a>
            </span>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

