@model MenuGenerator.Models.Volume

@{
    ViewData["Title"] = "Delete";
    Layout = "_mealOptionsLayout";
}

<h1 class="text-light">Odstrániť</h1>

<h3 class="text-light">Naozaj chcete odstrániť?</h3>
<div>
    <h4 class="text-light">Objem</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2 text-light">
            @Html.DisplayNameFor(model => model.Objem)
        </dt>
        <dd class="col-sm-10 text-light">
            @Html.DisplayFor(model => model.Objem)
        </dd>
    </dl>

    <form asp-action="Odstrániť">
        <input type="hidden" asp-for="ID" />
        <button type="submit" value="Odstrániť" class="btn">
            <img src="~/bootstrap-icons/trash.svg" class="zoom-sm hvr-csr-pt" alt="" width="32" height="32" title="Odstrániť">
        </button>
        <a asp-action="Index">
            <img src="~/bootstrap-icons/card-text.svg" class="zoom-sm hvr-csr-pt" alt="" width="32" height="32" title="Zobraziť položky">
        </a>
    </form>
</div>
