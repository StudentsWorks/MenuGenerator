@model MenuGenerator.Models.Meal

@{
    ViewData["Title"] = "Details";
}



<ul class="nav mt-2 mb-2">
    <li class="nav-item">
        <h4 class="nav-link text-light">Detaily jedla</h4>
    </li>
    <li class="nav-item mt-2">
        <a asp-action="EditMeal" asp-route-id="@Model.ID">
            <img src="~/bootstrap-icons/pen.svg" class="zoom-sm hvr-csr-pt mr-2" alt="" width="32" height="32" title="Upraviť">
        </a>
    </li>
    <li class="nav-item mt-2 ml-2">
        <a asp-action="DisplayMeals">
            <img src="~/bootstrap-icons/card-text.svg" class="zoom-sm hvr-csr-pt mr-2" alt="" width="32" height="32" title="Zobraziť položky">
        </a>
    </li>
</ul>

<dl class="row black m-1">
    <dt class="col-sm-2 text-light">
        Druh jedla
    </dt>
    <dd class="col-sm-10 text-light">
        @Html.DisplayFor(model => model.MealKind.Nazov)
    </dd>
    <dt class="col-sm-2 text-light">
        Názov jedla
    </dt>
    <dd class="col-sm-10 text-light">
        @Html.DisplayFor(model => model.Nazov)
    </dd>
    <dt class="col-sm-2 text-light">
        Obľúbenosť
    </dt>
    <dd class="col-sm-10 text-light">
        @Html.DisplayFor(model => model.Popularity.Nazov)
    </dd>
    <dt class="col-sm-2 text-light">
        Náročnosť
    </dt>
    <dd class="col-sm-10 text-light">
        @Html.DisplayFor(model => model.Complexity.Nazov)
    </dd>
    <dt class="col-sm-2 text-light">
        Cena
    </dt>
    <dd class="col-sm-10 text-light">
        @Html.DisplayFor(model => model.Price.Cena)
    </dd>
    <dt class="col-sm-2 text-light">
        Hmotnosť
    </dt>
    <dd class="col-sm-10 text-light">
        @Html.DisplayFor(model => model.Weight.Hmotnost)
    </dd>
    <dt class="col-sm-2 text-light">
        Alergény
    </dt>
    <dd class="col-sm-10 text-light">
        @Html.DisplayFor(model => model.Alergeny)
    </dd>
</dl>
